{
  "$schema": "http://json-schema.org/schema",
  "type": "object",
  "required": ["services"],
  "services": {
    "minProperties": 1,
    "additionalProperties": {
      "type": "object",
      "required": ["operations"],
      "description": "The service id use it to define the access to the service, like 'cats', then you will access like 'services.cats'",
      "properties": {
        "options": {
          "type": "object",
          "description": "Add the got module properties here, see 'https://github.com/sindresorhus/got', this options will be merge it with the operation options, prioritizing the operation options"
        },
        "operations": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "The id of the operation"
              },
              "version": {
                "type": "string",
                "description": "The id of the info.version related with this data source/operation, if not provided by default will be linked to the first api-definition info.version",
                "example": "v1"
              },
              "private": {
                "type": "boolean",
                "description": "If set to true the operation will not be exposed even if there is set on the api swagger",
                "default": false
              },
              "method": {
                "type": "string",
                "description": "The HTTP method that will be use to request the data using 'https://github.com/sindresorhus/got'"
              },
              "url": {
                "type": "string",
                "description": "The URL that will be use to request the data using 'https://github.com/sindresorhus/got'"
              },
              "inherit": {
                "type": "boolean",
                "default": true,
                "description": "Determine if this operation behaviour will inherit from the previous version operation with the same id"
              },
              "options": {
                "type": "object",
                "description": "Add the got module properties here, see 'https://github.com/sindresorhus/got'",
                "additionalProperties": true,
                "properties": {
                  "body": {
                    "type": ["object", "string", "array"]
                  },
                  "form": {
                    "type": ["boolean", "object"]
                  },
                  "href": {
                    "type": "string"
                  },
                  "headers": {
                    "type": "object"
                  },
                  "responseType": {
                    "type": "string",
                    "enum": ["json", "buffer","text"]
                  },
                  "multipart": {
                    "type": ["object", "array"]
                  },
                  "formData": {
                    "type": "object"
                  },
                  "json": {
                    "type": ["object", "boolean"]
                  },
                  "proxy": {
                    "headers":{
                      "type": "object"
                    },
                    "auth": {
                      "type": "object"
                    },
                    "protocol": {
                      "type": "string"
                    }
                  },
                  "preambleCRLF": {
                    "type": "boolean"
                  },
                  "postambleCRLF": {
                    "type": "boolean"
                  },
                  "hooks": {
                    "type": "object",
                    "properties": {
                      "beforeRequest": {
                        "type":"array"
                      },
                      "beforeRedirect": {
                        "type":"array"
                      },
                      "beforeRetry": {
                        "type":"array"
                      },
                      "afterResponse": {
                        "type":"array"
                      }
                    }
                  },
                  "stream": {
                    "type": "boolean"
                  },
                  "resolveBodyOnly": {
                    "type": "boolean"
                  },
                  "baseUrl": {
                    "type": "string"
                  },
                  "cookieJar": {
                    "type": "object"
                  },
                  "encoding": {
                    "type": ["string", "null"]
                  },
                  "query": {
                    "type": ["string", "object"]
                  },
                  "timeout": {
                    "type": ["number", "object"]
                  },
                  "retry": {
                    "type": ["number", "object"]
                  },
                  "followRedirect": {
                    "type": ["boolean"]
                  },
                  "decompress": {
                    "type": ["boolean"]
                  },
                  "useElectronNet": {
                    "type": ["boolean"]
                  },
                  "throwHttpErrors": {
                    "type": ["boolean"]
                  },
                  "agent": {
                    "type": ["boolean", "object", "null"]
                  },
                  "cache": {
                    "type": ["object"]
                  }
                }
              }
            },
            "required": ["id"]
          }
        }
      }
    }
  }
}
