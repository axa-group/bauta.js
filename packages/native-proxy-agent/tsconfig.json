{
  "extends": "../../tsconfig.base",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "es6"
  },
  "include": ["src/**/*", "src/**/*.json"],
  "exclude": ["**/__tests__", "**/__mocks__"],
  "typedocOptions": {
    "mode": "file",
    "out": "docs",
    "readme": "./documentation.md",
    "theme":"markdown",
    "mdEngine": "github",
    "excludePrivate": true,
    "includeDeclarations": true,
    "excludeNotExported": true,
    "excludeExternals": true,
    "toc": true
  }
}