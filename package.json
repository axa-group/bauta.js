    "supertest": "^6.1.6",
    "ts-jest": "^27.0.5",
    "typescript": "4.4.x"
  },
  "scripts": {
    "lerna": "lerna",
    "cm": "git-cz",
    "benchmark-pipeline": "node ./packages/bautajs-core/benchmark/pipeline-builder.js",
    "benchmark-core": "npx concurrently -k -s first \"node ./packages/bautajs-core/benchmark/simple.js\" \"npx autocannon -c 100 -d 5 -p 10 localhost:8080/v1/api/\"",
    "benchmark-express": "npx concurrently -k -s first \"node ./packages/bautajs-express/benchmark/simple.js\" \"npx autocannon -c 20 -d 5 -p 10 localhost:8080/v1/api/\"",
    "benchmark-fastify": "npx concurrently -k -s first \"node ./packages/bautajs-fastify/benchmark/simple.js\" \"npx autocannon -c 100 -d 5 -p 10 localhost:8080/v1/api/\"",
    "lint": "eslint '*/**/*.{ts,tsx}' ",
    "bootstrap": "npm run lerna bootstrap -- --no-ci",
    "postinstall": "husky install && npm run lerna bootstrap -- --no-ci && npm run compile",
    "clean": "npm run lerna clean -- --yes && git clean -dfqX -- ./node_modules **/{dist,node_modules}/ ./packages/*/tsconfig*tsbuildinfo ./packages/*/package-lock.json ./coverage",
    "release:local": "npm run clean && npm i && npm run test && lerna publish --exact --conventional-commits --no-verify-access --no-verify-registry --yes",
    "release": "lerna publish --exact --conventional-commits --no-verify-access --no-verify-registry --yes",
    "test": "jest --verbose --detectOpenHandles",
    "test:clean": "jest --clearCache",
    "test:watch": "npm run test -- --watchAll",
    "checkDeps": "npm run lerna exec -- --concurrency 14 -- npm outdated",
    "compile": "tsc --build tsconfig.build.json",
    "compile:clean": "tsc --build tsconfig.build.json --clean",
    "watch": "tsc --build tsconfig.build.json --watch"
  },
  "engines": {
    "node": ">=10"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jestSonar": {
    "reportPath": "coverage",
    "reportFile": "test-reporter.xml"
  }
}
